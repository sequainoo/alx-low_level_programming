# build executable named school.
# does not recompile the sources again but can force it with the re rule

CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = NAME

all: $(OBJ)
	$(CC) -o $(NAME) $^

%.o: %.c
	$(CC) -c -o $@ $^

clean:
	rm *~ *#*#* $(RM)

oclean:
	rm *.o


fclean:
	rm *~ *#*#* $(RM) *.o

re:
	$(CC) -c $(SRC)
